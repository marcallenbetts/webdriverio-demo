{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "outDir": "src/",
    "types": ["node", "webdriverio/sync", "@wdio/mocha-framework"],
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],
  "compileOnSave": false
}
